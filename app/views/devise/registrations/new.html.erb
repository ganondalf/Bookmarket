<div class="container">
  <div class="row">
    <div class='col-md-12'  style='text-align: center'>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, size: 40 %></div>

        <div><%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, size: 40 %></div>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, size: 40 %></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", size: 40 %></div>

        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", size: 40 %></div>

        <div><%= f.hidden_field :bookmark_token, :value => User.bookmark_token %>

        <div><%= f.submit "Sign up" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
