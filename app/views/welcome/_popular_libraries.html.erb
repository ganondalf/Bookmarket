<div class="row popularLibrariesSection">
    <% @libraries.each do |library| %>
    <div class='col-md-4 popularLibraries'>
        <div class='row'>
          <div class='col-md-12'>
            <a href='/libraries/<%= library.id %>'>
            <h4>Title: <%= library.title.capitalize %></h4></a>
            <h6>Description: <%= library.description %></h6>
            <p> Number of Links: <%= library.links.size %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

