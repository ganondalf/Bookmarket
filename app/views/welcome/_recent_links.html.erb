<div class="row recentLinksSection">
    <% @links.order("created_at DESC limit 20").each do |link| %>
    <div class='col-md-4 recentLinks' id="link<%=link.id%>">
      <div class='row'>
        <div class='col-md-12'>
          <div class='row'>
              <div class='col-md-3'>
                  <a href="<%=link.url %>"><img src="<%= link.picture %>" width="60px" height='60px'></a>
              </div>
              <div class='col-md-9'>
                <h4><%= link.title.capitalize %></h4>
              </div>
            </div>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-12'>
          <% link.notes.each do |note| %>
            <p><%= note.user.name %> says:</br> <%= note.body %></p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
</div>
